<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lista attivita"
            android:layout_marginBottom="24dp"
            android:textSize="24sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/aula_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32"
                android:layout_marginRight="16dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/txt_ora_attivita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08h30 - 10h30"
                android:layout_toRightOf="@id/aula_id"
                android:layout_alignParentTop="true" />

            <Button
                android:id="@+id/btn_visualizza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#009688"
                style="?android:attr/borderlessButtonStyle"
                android:text="Visualizza" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/btn_visualizza"
                android:layout_toRightOf="@id/aula_id"
                android:layout_below="@id/txt_ora_attivita"
                android:text="Creazione di una applicazione"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/aula_id2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="36"
                android:layout_marginRight="16dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/txt_ora_attivita2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08h30 - 10h30"
                android:layout_toRightOf="@id/aula_id2"
                android:layout_alignParentTop="true" />

            <Button
                android:id="@+id/btn_visualizza2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:backgroundTint="#009688"
                android:textColor="#FFF"
                android:text="Visualizza" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/btn_visualizza2"
                android:layout_toRightOf="@id/aula_id2"
                android:layout_below="@id/txt_ora_attivita2"
                android:text="Progettazione di una rete su Packet Tracer"
                android:textSize="20sp" />
        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="3dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_attivita"
                    android:layout_width="wrap_content"
                    android:layout_height="160dp"
                    android:src="@drawable/lab_info"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/txt_id_aula"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_attivita"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="36"
                    android:textSize="32sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_margin="8dp"
                    android:layout_below="@id/img_attivita"
                    android:layout_toRightOf="@id/txt_id_aula">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="08h30 - 10h30"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Creazione di una applicazione"
                        android:textSize="24sp"/>

                    <Button
                        android:id="@+id/btn_visualizza54"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:textColor="#009688"
                        style="?android:attr/borderlessButtonStyle"
                        android:text="Visualizza" />
                </LinearLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>